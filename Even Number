using System;

namespace SoftUni
{
    class Program
    {
        static void Main(string[] args)
        {

            int number = int.Parse(Console.ReadLine());
            int input = number;

            while(input%2!=0)
            {
                Console.WriteLine("Please write an even number.");
                input = int.Parse(Console.ReadLine());
            }
           
            Console.WriteLine($"The number is: {Math.Abs(input)}");
        }
    }
    
}

